<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomla\Component\Phmoney\Administrator\Field">
    
    <fieldset name="details" label="JDETAILS">
        
        <field
            name="id"
            type="hidden"
            label="JGLOBAL_FIELD_ID_LABEL"
            default="0"
            class="readonly"
            readonly="true"
        />
        
        <field
            name="account_id_source"
            class="advancedSelect"
            type="accountedit"
            label="COM_PHMONEY_ACCOUNT_S_LABEL"
            required="true"
        >
            <option value="1">JGLOBAL_ROOT_PARENT</option>
        </field>

        <field
            name="account_id_destination"
            class="advancedSelect"
            type="accountedit"
            label="COM_PHMONEY_ACCOUNT_D_LABEL"
            required="true"
        >
            <option value="1">JGLOBAL_ROOT_PARENT</option>
        </field>
        
        <field 
            name="post_date" 
            type="calendar" 
            label="COM_PHMONEY_POST_DATE"
            translateformat="true"
            showtime="false"
            size="22"
            filter="user_utc" 
            required="true"
        />
        
        <field
            name="title"
            type="text"
            label="JGLOBAL_TITLE"
            class="input-xxlarge"
            size="40"
        />
        
        <field
            name="num"
            type="text"
            label="COM_PHMONEY_NUM"
            class="input-xxlarge"
            size="40"
        />
        
        <field
            name="value"
            type="text"
            label="COM_PHMONEY_AMOUNT"
            class="input-xxlarge"
            size="40"
            required="true"
        />
        
        <field 
            name="description" 
            type="editor"
            label="JGLOBAL_DESCRIPTION" 
            filter="JComponentHelper::filterText"
            buttons="true" 
        />
        
    </fieldset>
    
</form>
