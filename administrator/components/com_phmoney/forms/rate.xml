<form addfieldprefix="Joomla\Component\Phmoney\Administrator\Field">
    
    <fieldset name="splits" label="JDETAILS">
        <field 
            name="id" 
            type="hidden" 
            label="JGLOBAL_FIELD_ID_LABEL"
            class="readonly" 
            size="10" 
            default="0"
            readonly="true" 
        />
        
        <field name="portfolio_id" 
               type="portfolios" 
               readonly="true"
               label="COM_PHMONEY_PORTFOLIO" required="true">
        </field>
    
        <field 
            name="currency_id"
            type="currencys"
            class="advancedSelect"
            label="COM_PHMONEY_ACCOUNT"
            required="true"
            default="139"
        />
    
        <field name="value" type="number" 
               default="1" 
               label="COM_PHMONEY_RATE" 
               description="COM_PHMONEY_RATE_VALUE_DESC"
               required="true" />
    
    </fieldset>
    
</form>
